# Core API
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=*
RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW=1 minute

# ClickHouse connection
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Chain + pool configuration
RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
CHAIN_ID=1
POOL_ADDRESS=0x72310daaed61321b02b08a547150c07522c6a976
POOL_ID=curve-usdc-usdf
POLL_INTERVAL_MS=60000
Q_BASE_AMOUNT=500000
BASE_TOKEN_DECIMALS=18
QUOTE_TOKEN_DECIMALS=6
R_MIN_BPS=3300
GRACE_PERIOD_SECONDS=900

# IPFS configuration
IPFS_API_TOKEN=

# Signing keys
SIGNER_PRIVATE_KEY=your_payout_signer_private_key
PAYOUT_VERIFIER_ADDRESS=0xPayoutModule

# API authentication
VALIDATOR_API_SECRET=your_shared_secret_key

# Backend webhooks
WEBHOOK_BASE_URL=http://localhost:3000
WEBHOOK_SECRET=your_shared_secret_key

# Metadata
SAMPLE_SOURCE=validator-indexer

# Aave DLP monitoring
ENABLE_AAVE_MONITORING=false
AAVE_LENDING_POOL_ADDRESS=0x...
AAVE_COLLATERAL_ASSET=0x...
AAVE_PRICE_FEED=0x...
AAVE_DEPEG_THRESHOLD=0.02
AAVE_POOL_ID=aave-pyusd

# Pyth Network fallback oracle
ENABLE_PYTH_FALLBACK=true
PYTH_PRICE_FEED_ID=0xc69e1a6c00000000000000000000000000000000000000000000000000000000
